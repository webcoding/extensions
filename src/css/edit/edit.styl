    .edit-page-about {
      max-height: 0;
      opacity: 0;
      background: rgba(0,0,0,.3);
    }
  }*/
  
  @require "info.styl";
  @require "tags.styl";
  @require "collection.styl";
  @require "actions.styl";
  @require "footer.styl";
}

#app.firefox {
  .edit-page .card {
    animation: none !important;
  }
  
  .edit-page .saveBadge {
    animation: fadeOutWithDelay appearDuration ease-in-out !important;
    opacity:0;
    transform: rotateX( 0 ) !important;
    
    &:before {
      display: none !important;
    }
  }
  
  .edit-page-already {
    .saveBadge {
      animation: none !important;
      opacity:0 !important;
    }
  }
}