@require "../const.styl";

.edit-page {
  display: flex;
  flex-direction: column;
  max-height: var(--max-height, maxHeight);
  transition: transform .2s ease-in-out, opacity .2s ease-in-out;
  //animation: fadeIn .2s ease-in-out;
    
  &.edit-page-closing {
    transform: translateY(-5px);
    opacity:0;
  }

  .edit-page-separator {
    height: 1px;
    position: relative;
    z-index: 3;
    background-image: linear-gradient(to left, rgba(0,0,0,.03) 0%, rgba(0,0,0,.1) 50%, rgba(0,0,0,.03) 100%);
    //margin: 0 defaultGap;
    //box-shadow: 0 var(--thin-border, 1px) 0px var(--thin-border-color, rgba(0,0,0,.1));
  }
  
  .edit-page-about {
    flex-shrink: 0;
  }
  
  &.edit-page-appear {
    animation: fadeInTranslateBackward .3s ease-in-out;
  }
  
  &.edit-page-appeartop {
    animation: fadeInTranslateVerticalBackward .3s ease-in-out;
  }

