.info {
  flex-direction: column;
  
  .text {
    order:2;
    padding-right:0;
  }
  
  .cover-wrap {
    width: 100vw;
    height: 100px;
    max-height: 100%;
    margin:0 (defaultGap*-1);
    margin-bottom: defaultGap;
    background: colorLightGray;
    
    &:before {
      box-shadow:none;
      box-shadow: inset 0 var(--thin-border, 1px) 0 var(--thin-border-color, rgba(0,0,0,.1)),
            inset 0 var(--thin-border-minus, -1px) 0 var(--thin-border-color, rgba(0,0,0,.1));
    }
  }
}