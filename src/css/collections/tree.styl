.collectionPathWrap {
  flex:1;
  display: flex;
  flex-direction: column;

  .pathWrap {
    flex:1;
    overflow: hidden;
    overflow-y: scroll;
    overflow-y: overlay;
    display: none;
  }
  
  &[data-focus="true"] .pathWrap {
    display: block;
  }
}

.pathWrap {
  padding: 1px 0;
  margin: 0 16px;
  margin-bottom: 16px;
  border-radius: 2px;
  box-shadow: 0px 0px 0px 1px rgba(0,0,0,.1);
  background: sidebarBackground;
  
